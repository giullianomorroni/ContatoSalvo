<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
      	android:id="@+id/textView_titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/registro_titulo" />
    
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:orientation="horizontal"
		android:layout_width="wrap_content"
    	android:layout_height="wrap_content">

         <TextView
        	android:id="@+id/textView_cadastrar_email"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/email" />

   	    <EditText
	        android:id="@+id/editText_cadastrar_email"
	        android:inputType="textEmailAddress"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="14dp"
	        android:ems="10"/>
	</LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:orientation="horizontal"
		android:layout_width="wrap_content"
    	android:layout_height="wrap_content">

         <TextView
        	android:id="@+id/textView_cadastrar_pin"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/pin" />

   	    <EditText
	        android:id="@+id/editText_cadastrar_pin"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="14dp"
	        android:ems="10"
	        android:inputType="text" />
	</LinearLayout>

    
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:orientation="horizontal"
		android:layout_width="wrap_content"
    	android:layout_height="wrap_content">

         <TextView
        	android:id="@+id/textView_sincronizar"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/sincronizar" />

   	    <CheckBox
	        android:id="@+id/checkBox_cadastrar_sincronizar"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:ems="10" />
	</LinearLayout>    
    
    <Button
        android:id="@+id/button_registrar"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:onClick="registrar"
        android:layout_marginTop="50.0sp"
        android:layout_marginLeft="200.0sp"
        android:text="@string/registrar" />

</LinearLayout>