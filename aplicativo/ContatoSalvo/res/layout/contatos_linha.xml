<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:columnCount="6"
    android:alignmentMode="alignBounds"
   	android:columnOrderPreserved="false"
    android:layout_width="match_parent"
	android:layout_height="20dp" >

    	<TextView xmlns:android="http://schemas.android.com/apk/res/android"
		    android:id="@+id/rowEditTextTelefone"
		    android:layout_width="150dp"
		    android:layout_marginLeft="5.0sp"
	        android:textSize="20dp"
	        android:value="9999 9999"
	        android:layout_gravity="left"
		    android:layout_height="wrap_content" />

   		<TextView xmlns:android="http://schemas.android.com/apk/res/android"
	    	android:id="@+id/rowTextOperadora"
	    	android:paddingLeft="20dp"
	    	android:layout_width="wrap_content"
	    	android:value="operadora"
	    	android:layout_gravity="left"
	    	android:layout_height="wrap_content" />

		<Space
		    android:layout_width="10dp"
            android:layout_gravity="fill" />

		<ImageButton android:id="@+id/buttonRemoveTelefone"
		    android:contentDescription="@string/apagar"
		    android:padding="15dp"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_gravity="right"
		    android:background="@drawable/delete"
		    android:clickable="true" /> 

		<Space
		    android:layout_width="10dp"
            android:layout_gravity="fill" />
					    
		<ImageButton android:id="@+id/buttonCallTelefone"
		    android:contentDescription="@string/chamar"
			android:padding="15dp"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_gravity="right"
		    android:background="@drawable/call"
		    android:clickable="true" />

</GridLayout>
